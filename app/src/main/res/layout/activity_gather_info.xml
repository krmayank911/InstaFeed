<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buggyarts.instafeedplus.IntroActivity"
    android:background="@color/themeBackgroundColor">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/gather_info_heading"
                android:layout_below="@id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Care to answer some Questions?"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <RelativeLayout
                android:id="@+id/country"
                android:layout_below="@id/gather_info_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/country_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country :"
                    android:textSize="20dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:visibility="gone"
                    android:layout_marginRight="20dp" />

                <Spinner
                    android:id="@+id/country_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/country_heading"
                    android:autofillHints="Country">

                </Spinner>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/language"
                android:layout_below="@id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/language_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language :"
                    android:textSize="20dp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginRight="20dp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/language_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/language_heading"
                    android:autofillHints="Country"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/skip_or_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/language"
                android:layout_margin="50dp"
                android:gravity="center_horizontal">

                <!--<TextView-->
                <!--android:id="@+id/skip"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Not Now"-->
                <!--android:textSize="20dp"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textStyle="bold"-->
                <!--android:background="@drawable/rectagularbg"-->
                <!--android:padding="12dp" />-->

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:minWidth="150dp"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/rectagularbg"
                    android:padding="12dp"
                    android:gravity="center" />

            </RelativeLayout>

            <TextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="12dp"
                android:text="Not Now"
                android:textColor="@color/indigo"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <com.buggyarts.instafeedplus.customClasses.CustomViewPager
        android:id="@+id/introViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"/>

    <RelativeLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/button_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="Skip"
            android:textAllCaps="true"
            android:textColor="@color/themeColorAccentLight"
            style="@style/themeText_18"
            android:background="@drawable/color_button_feedback"/>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:piv_animationType="thinWorm"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="@color/themeColorAccentDark"
            app:piv_unselectedColor="@color/themeColorAccentLight"
            app:piv_radius="6dp"
            app:piv_padding="8dp"/>

        <ImageView
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/next"
            android:tint="@color/themeColorSecondaryDark"
            android:background="@drawable/circular_feed_back"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</RelativeLayout>
