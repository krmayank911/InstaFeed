<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/relativeimage"
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:color/holo_orange_light"
                android:background="@drawable/bg_feed_click"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/relativeimage"
            android:layout_marginBottom="-20dp"
            android:paddingBottom="3dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="end">

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:padding="6dp"
                android:src="@drawable/ic_bookmark_border_pink_24dp"
                android:tint="@color/themeIconTint"
                android:background="@drawable/background_bookmark"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:padding="6dp"
                android:tint="@color/themeIconTint"
                android:src="@drawable/ic_share_pink_24dp"
                android:background="@drawable/background_bookmark"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/meta_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/relativeimage">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock"
                android:tint="@color/themeColorSecondary"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/meta_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="6 hours ago - "
                android:layout_margin="5dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/feed_container"
            android:layout_below="@id/meta_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:ellipsize="end"
                android:text="Netflix's Chilling New Sabrina Series Has Finally Found Its Teenage Witch"
                android:maxLines="6"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:background="@drawable/bg_feed_click"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:text="'Mad Men' actress Kiernan Shipka will take on Madam Satan in the dark Archie Comics drama" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/powered_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="10dp"
                    android:textSize="10dp"
                    android:text="powered by NewsApi.org" />

                <TextView
                    android:id="@+id/read_more"
                    android:layout_width="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/themeColorAccent"
                    android:background="@drawable/bg_feed_click"
                    android:text="Read More.." />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/card_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner_adView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            ads:adSize="BANNER"
            ads:adUnitId="@string/dummy_banner_ad_id"/>

    </RelativeLayout>

</RelativeLayout>