<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/card_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/relativeimage"
                android:layout_marginBottom="-18dp"
                android:paddingBottom="3dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="end"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_bookmark_border_pink_24dp"
                    android:tint="@color/colorPrimary"
                    android:background="@drawable/background_bookmark"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_share_pink_24dp"
                    android:background="@drawable/background_bookmark"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeimage"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:color/holo_orange_light" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/relativeimage">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:text="Moments ago - "
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/time"
                    android:hint="Daily Mail" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/feed_container"
                android:layout_below="@id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:text="Netflix's Chilling New Sabrina Series Has Finally Found Its Teenage Witch"
                    android:maxLines="3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:maxLines="5"
                    android:ellipsize="end"
                    android:gravity="fill"
                    android:text="'Mad Men' actress Kiernan Shipka will take on Madam Satan in the dark Archie Comics drama"
                    android:textColor="@color/textColorSubDark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/feed_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/read_more"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="Read More.."
                    android:layout_centerVertical="true"/>

                <!--<ImageView-->
                    <!--android:id="@+id/bookmark"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="4dp"-->
                    <!--android:src="@drawable/ic_bookmark_border_pink_24dp"-->
                    <!--android:tint="@color/colorPrimary"/>-->

                <!--<ImageView-->
                    <!--android:id="@+id/share"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:padding="4dp"-->
                    <!--android:layout_toRightOf="@id/bookmark"-->
                    <!--android:src="@drawable/ic_share_pink_24dp" />-->

                <TextView
                    android:id="@+id/powered_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:textSize="10dp"
                    android:text="powered by NewsApi.org" />

            </RelativeLayout>

        </RelativeLayout>

</android.support.v7.widget.CardView>