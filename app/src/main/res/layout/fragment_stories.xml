<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buggyarts.instafeedplus.HotStoriesActivity">

    <RelativeLayout
        android:id="@+id/hot_stories_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

        <android.support.design.widget.TabLayout
            android:id="@+id/hot_stories_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:tabSelectedTextColor="@color/colorPrimaryDark"
            app:tabTextColor="@color/darkGray"
            app:tabMode="scrollable"
            android:nestedScrollingEnabled="true">

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/hot_stories_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/hot_stories_tab_layout"
            android:nestedScrollingEnabled="true">

        </android.support.v4.view.ViewPager>


    </RelativeLayout>

</RelativeLayout>