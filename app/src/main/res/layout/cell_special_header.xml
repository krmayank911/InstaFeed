<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_page_header"
    android:layout_height="240dp">


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/placeholder"/>

        <RelativeLayout
            android:id="@+id/page_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="15dp">

            <TextView
                android:id="@+id/title_label"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_semi_bold"
                android:textSize="25sp"
                android:text="Midnight Bliss"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/published_at"
                android:layout_below="@id/title_label"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/themeTextTitle_14"
                android:text="22 Oct, 2018"/>

            <TextView
                android:id="@+id/sub_text"
                android:layout_below="@id/published_at"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/themeTextTitle_16"
                android:text="Had your big fat dinner and dessert but still don't feel good? Maybe a little bit of shopping."/>

        </RelativeLayout>

</RelativeLayout>